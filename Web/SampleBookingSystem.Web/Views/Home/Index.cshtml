@model IEnumerable<SampleBookingSystem.Web.Models.Home.RoomViewModel>

@{
    ViewBag.Title = "Home Page";
}

<h1>Our hotel rooms</h1>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>Room Id</th>
            <th>Picture</th>
            <th>Capacity</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @{int counter = 0; }
        @foreach (var room in Model)
        {
            var base64 = Convert.ToBase64String(room.Picture);
            var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
            counter++;
         
            <tr>
                <td>@counter</td>
                <td>@room.Number</td>
                <td><img src="@imgSrc" width="200" height="200" /></td>
                <td>@room.Capacity</td>
                <td>@room.Description</td>
            </tr>
        }
    </tbody>
</table> 
